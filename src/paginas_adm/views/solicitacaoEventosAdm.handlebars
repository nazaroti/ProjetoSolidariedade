<head>
    <link rel="stylesheet" href="/css/solicitacaoEventosAdm.css">
</head>

<body>
    <section class="event-request-section" id="event-request-section">
        <div class="section-title" id="event-request-title">
            <h2>Solicitações de Eventos</h2>
        </div>
        <div class="event-cards-container" id="event-cards-container">
            {{#each eventsInReview}}
            <div class="event-card" id="event-request-card">
                <div class="event-card-content">
                    <h3 class="event-card-title">🎈{{Nome}}</h3>
                    <p class="event-card-info"><strong>📅Data:</strong> {{reverseDate Data}}</p>
                    <p class="event-card-info"><strong>🕒Horário:</strong> {{removeSeconds Horario}}</p>
                    <p class="event-card-info"><strong>🗺️Local:</strong> {{Local}}</p>
                    <p class="event-card-info"><strong>⏳Duração:</strong> {{Duracao}}</p>
                    <p class="event-card-info"><strong>👥Vagas:</strong> {{Num_Vagas}}</p>
                    <p class="event-card-info"><strong>🙋Responsável:</strong> {{Nome_Responsavel}}</p>
                    <p class="event-card-description"><strong>Descrição:</strong> {{Descricao}}</p>
                </div>
                <div class="event-card-buttons">
                    <form>
                        <button class="event-card-button reject" name="reject" value="reject"
                            onclick="showModal(event, this.value, {{ID_Evento}})">Recusar</button>
                    </form>
                    <form>
                        <button class="event-card-button accept" name="approve" value="approve"
                            onclick="showModal(event, this.value, {{ID_Evento}})">Aceitar</button>
                    </form>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

    <div class="confirmation">
        <div class="modal-overlay" id="modal">
            <div class="modal-content">
                <form id="modal-form" action="/updateEventStatus?_method=PUT" method="POST">
                    <h2 class="modal-title" id="modal-title"></h2>
                    <input type="hidden" name="event_id" id="event_id" value="" />
                    <input type="hidden" name="confirm" id="confirm" value="" />
                    <button type="button" onclick="closeModal('modal')" class="event-card-button reject">Não</button>
                    <button type="submit" class="event-card-button accept">Sim</button>
                </form>
            </div>
        </div>
    </div>


    <script src="/js/solicitacaoEventosAdm.js"></script>
</body>